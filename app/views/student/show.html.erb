    <body>
    <div class="center">
        <h1>Welcome to XYZ University</h1>
        <h3>Your Prefilled Details</h3>
        <h5 class="red" color="red"><strong><%= flash[:error]%></strong></h5>
        <div class="row">
        <div class=" details col-lg-8">
    <div class="container-fluid">
  <div class="row content">
    <br>
      <div class="well">
        <h4>Name</h4>
        <p><strong><%= @student.name %></strong></p>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="well">
            <h4>Date of Birth</h4>
              <p><strong><%= @student.dob %></strong></p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="well">
            <h4>Gender</h4>
            <p><strong>Male</strong></p>
          </div>
        </div>
      </div>
            <div class="well">
        <h4>Father's Name</h4>
        <p><strong><%= @student.fathers_name %></strong></p>
      </div>
            <div class="well">
        <h4>Mother's Name</h4>
        <p><strong><%= @student.mothers_name %></strong></p>
      </div>
            <div class="well">
        <h4>Address</h4>
        <p><strong>Mumbai</strong></p>
      </div>
                  <div class="well">
        <h4>Contact</h4>
        <p><strong>9999393132</strong></p>
      </div>
                  <div class="well">
        <h4>Email</h4>
        <p><strong>yash@gmail.com</strong></p>
      </div>
       <div class="row">
        <div class="col-sm-6">
          <div class="well">
            <h4>Course</h4>
              <p><strong>B.Tech</strong></p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="well">
            <h4>Course</h4>
            <p><strong>ECE</strong></p>
          </div>
        </div>
      </div>
  </div>
</div>  
</div>
        <div class="photo col-sm-4">
        <%= image_tag "DSC_0462.jpg"%>
        <br>
        <br>
        <br>
        <br>
        <% if @examid = ExamId.where(student_id: @student.id).last %>
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <div class="well">
            <h4>Exam ID</h4>
            <p class="big"><strong><%=@examid.id+1600%></strong></p>
          </div>
        </div>
        <%else%>
                 <%= form_tag({controller: "student", action: "attach_addhar"}) do%>
          <%= hidden_field_tag(:id, @student.id) %>
          <%= text_field_tag 'number', nil,class: 'form-control', placeholder: "Aadhar Card Number"  %>
          <%= button_tag "Link your Aadhar Card", class: "btn btn-primary btn-block"%>
          <% end %>
        <br>
        <br>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myyModal">Get Aadhar Id</button>
        <%end%>
        </div>
        </div>
      </div>
        
<div class="container">
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Enter Your Aadhar ID</h4>
        </div>
        <div class="modal-body">
          <%= form_tag({controller: "student", action: "attach_addhar"}) do%>
          <%= hidden_field_tag(:id, @student.id) %>
          <%= text_field_tag 'number' %>
        </div>
        <div class="modal-footer">
          <%= button_tag "submit", class: "btn btn-default"%>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
  
</div>
